{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./",
		"types": ["node", "vitest/globals"]
	},
	"include": ["*.ts", "src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["node_modules", "dist"]
}
